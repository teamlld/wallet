    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/categoryContainer"
        android:layout_weight="0.5"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/categoryIncomeContainer"
        android:layout_weight="0.5"
        />

</LinearLayout>
